  $("#photo3").on('click', function(){
    $("#image1").hide();
    $("#image0").hide();
    $("#image3").hide();
    $("#image4").hide();
    $("#image2").show();
  });
  $("#photo4").on('click', function(){
    $("#image1").hide();
    $("#image2").hide();
    $("#image0").hide();
    $("#image4").hide();
    $("#image3").show();
  });
  $("#photo5").on('click', function(){
    $("#image1").hide();
    $("#image2").hide();
