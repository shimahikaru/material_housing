.conteiner {
margin-top: 55px;
width: 100vw;
  .comment {
    margin-top: 10px;
    width: 96%;
    margin-right: auto;
    margin-left: auto;
    background-color: #f65314;
    height: 55px;
    border-radius: 8px;
    border: double 8px #fffaec;
    max-width: 1200px;
      &:hover {
        opacity: 0.6;
       }
     a {
      color:  #fff;
      text-decoration: none;
      align-items: center;
      display: flex;
      justify-content: center;
      padding-top: 13px;
       img.image_comment {
        margin-right: 5px;
        margin-top: -18px;
       }
       p {
        font-size: 17px;
        letter-spacing: 0.1em;
        font-weight: bold;
        line-height: 18px;
        color: #fff;
          span {
            font-size: 10px;
          }
       }
     }
  }
h5 {
  font-size: 11px;
  color: #777777;
   margin-bottom: 5px;
   color: #fff;
}
h1 {
  font-size: 23px;
  font-weight: bold;
  line-height: 40px;
  margin-bottom: 0;
  color: #fff;

}
width: 100%;
    .conA, .conB, .conC, .conD {
      width: 99%;
      max-width: 1200px;
      margin-right: auto;
      margin-left: auto;
      margin-top: 20px;
    }
  .conA-1 {
    border-radius: 3px;
    width: 94%;
    max-width: 1200px;
    margin-right: auto;
    margin-left: auto;
    border-radius: 6px;
        background-image: url("<%= ("kitchen.jpg") %>");
    background-size: cover;
  }
  .conA {
    margin-top: 0;
    background: rgba(255,255,255,0.2);
    padding-top: 30px;
    padding-bottom: 30px;
    width: 100%;
    border-radius: 6px;
    .panda {
      margin-bottom: 15px;
    }
    .search_about {
      width: 65%;
      max-width: 600px;
      margin-right: auto;
      margin-left: auto;
      .form {
        width: 100%;
      }
      select {
        -webkit-appearance: none;
         -moz-appearance: none;
         appearance: none;
         display: block;
         cursor: pointer;
         text-align: center;
         background: #fffaec;
          padding: 3px;
          color: #555555;
          border: solid 1px #DDDDDD;
          font-size: 13px;
          border-radius: 25px;
      }
      .search {
      -webkit-appearance: none;
      text-decoration: none;
      font-size: 14px;
      font-weight: bold;
      line-height: 35px;
      display: inline-block;
      background-color: #fff;
      margin-top: 15px;
      width: 100%;
      color: #777777;
      border-radius: 25px;
      border: solid 1px #DDDDDD;
      box-shadow: 0 5px 0 #e4e4e4;
       &:hover {
        background-color: #e4e4e4;
        color: #fff;
        transform: translate3d(0, 5px, 0);
       }
      }
    }
    p {
      font-size: 13px;
      line-height: 25px;
      font-weight: bold;
      margin-top: -5px;
      margin-bottom: 30px;
      color: #fff;
    }
    a.search {
      background-color: #f65314;
      color: #fff;
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
      padding:12px 55px;
      align-items: center;
      letter-spacing: 0.1em;
      border-radius: 3px;
      box-shadow: 0 5px 0 #bf5b20;
      img {
        margin-bottom: -5px;
      }
      &:hover {
        background-color: #bf5b20;
        transform: translate3d(0, 4px, 0);
      }
    }
  }
  .conB {
    margin-top: 10px;
    ul {
      text-align: left;
      margin: 5px auto;
      width: 100%;
      li {
        font-size: 14px;
        font-weight: bold;
        line-height: 25px;
        width: 100%;
        h4 {
          font-size: 18px;
          width: 100%;
        }
         h6 {
          font-weight: 100;
          color: #555555;
          width: 98%;
          margin-right: auto;
          margin-left: auto;
          margin-top: 10px;
           span {
            font-weight: bold;
           }
         }
      }
    }
    a.company_index {
      text-decoration: none;
      font-size: 14px;
      font-weight: bold;
      line-height: 35px;
      display: inline-block;
      background-color: #fff;
      margin-top: 15px;
      width: 100%;
      color: #777777;
      border-radius: 3px;
      box-shadow: 0 5px 0 #e4e4e4;
       &:hover {
        background-color: #e4e4e4;
        color: #fff;
        transform: translate3d(0, 5px, 0);
       }
    }
    p {
      font-size: 14px;
      font-weight: bold;
      text-align: left;
      padding-left: 15px;
      color: #777777;
      line-height: 24px;
    }
  .conB-1 {
    margin-top: 5px;
    width: 100%;
     a.list-content {
      display: block;
      text-align: center;
      width: 93%;
      margin-right: auto;
      margin-left: auto;
      padding-left: 7px;
      box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
      background-color: #fff;
      text-decoration: none;
      font-weight: bold;
      font-size: 14px;
      line-height: 24px;
      color: #777777;
      padding-top: 5px;
      padding-bottom: 5px;
      border-radius: 20px;
        &:hover {
          background-color: #f65314;
          color: #fff;
        }
      }
    }
    .index_content {
      display: block;
      margin-top: 3px;
      width: 97%;
      margin-left: auto;
      margin-right: auto;
      max-width: 1200px;
      display: flex;
      flex-wrap: wrap;
          .list-content {
            display: block;
            border-radius: 5px;
            padding: 0;
            width: 45%;
            text-align: left;
            max-width: 400px;
            min-width: 160px;
            flex: 1 1 160px;
            margin: 1.5%;
            height: 240px;
            background-color: #fff;
            overflow: hidden;
            position: relative;
            box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
                a {
                  text-decoration: none;
                  &:hover {
                    opacity: 0.5;
                  }
                }
              .rank {
                text-align: left;
                padding-left: 5px;
                width: 110px;
              }
            .star-ratings-sprite {
              background: url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/2605/star-rating-sprite.png") repeat-x;
              font-size: 0;
              height: 21px;
              line-height: 0;
              overflow: hidden;
              text-indent: -999em;
              width: 110px;
              margin: 0;
              text-align: left;
              }
              .star-ratings-sprite-rating {
              background: url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/2605/star-rating-sprite.png") repeat-x;
              background-position: 0 100%;
              float: left;
              height: 21px;
              display: block;
              text-align: left;
              }
                    .listA {
                      padding: 5px;
                      margin-bottom: -10px;
                      margin-top: 5px;
                        h3 {
                          color: #555555;
                          font-weight: bold;
                          font-size: 13px;
                          margin-bottom: 3px;
                        }
                        p {
                          color: #555555;
                          border: solid 1px #cfcfcf;
                          text-decoration: none;
                          border-radius: 3px;
                          padding: 0 6px;
                          margin-right: 5px;
                          font-size: 10px;
                          line-height: 15px;
                          display: inline-block;
                          margin-bottom: 3px;
                        }
                        h6 {
                          font-size: 10px;
                          letter-spacing: 0.1em;
                          line-height: 18px;
                          color: #999999;
                        }
                  }
                .img {
                  width: 100%;
                  text-align: center;
                  height: 70%;
                    .image_view {
                       height:100%;
                       opacity: 0.8;
                    }
                }
            }
     }
   }
  .conC {
    p {
      font-size: 16px;
      font-weight: bold;
      text-align: left;
      padding-left: 15px;
      color: #f65314;
      border-left: solid 4px #f65314;
      line-height: 33px;
    }
  }
 @media (min-width: 750px) {
    .comment {
      height: 75px;
       a {
        padding-top: 25px;
          p {
            font-size: 20px;
          }
       }
    }
    h1 {
      font-size: 32px;
    }
    h5 {
      font-size: 15px;
    }
 }
}



